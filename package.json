{
  "name": "tripetto-example-angular",
  "title": "Tripetto collector example (Angular)",
  "version": "0.0.0",
  "description": "Demo for implementing the Tripetto collector using Angular including pause/resume functionality.",
  "license": "MIT",
  "private": true,
  "homepage": "https://gitlab.com/tripetto/examples/angular",
  "author": {
    "name": "Mark van den Brink",
    "email": "mark@vandenbr.ink",
    "url": "http://mark.vandenbr.ink"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/tripetto/examples/angular.git"
  },
  "bugs": {
    "url": "https://gitlab.com/tripetto/examples/angular/issues"
  },
  "scripts": {
    "ng": "ng",
    "start": "tripetto ./src/assets/demo.json",
    "format": "prettier --tab-width 2 --single-quote --print-width 140 --write \"src/**/*.ts\"",
    "build": "ng build",
    "make": "npm run format && npm run lint && ng build --prod",
    "test": "ng serve",
    "lint": "ng lint"
  },
  "dependencies": {
    "@angular/animations": "^6.0.3",
    "@angular/common": "^6.0.3",
    "@angular/compiler": "^6.0.3",
    "@angular/core": "^6.0.3",
    "@angular/forms": "^6.0.3",
    "@angular/http": "^6.0.3",
    "@angular/platform-browser": "^6.0.3",
    "@angular/platform-browser-dynamic": "^6.0.3",
    "@angular/router": "^6.0.3",
    "core-js": "^2.5.6",
    "prettier": "^1.12.1",
    "rxjs": "^6.2.0",
    "superagent": "^3.8.3",
    "tripetto-collector": "^0.4.25",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.6.5",
    "@angular/cli": "^6.0.5",
    "@angular/compiler-cli": "^6.0.3",
    "@angular/language-service": "^6.0.3",
    "@types/node": "^10.1.2",
    "@types/superagent": "^3.8.0",
    "codelyzer": "^4.3.0",
    "tripetto": "^0.4.6",
    "tripetto-block-checkbox": "^1.0.21",
    "tripetto-block-checkboxes": "^1.0.14",
    "tripetto-block-dropdown": "^1.0.13",
    "tripetto-block-email": "^1.0.14",
    "tripetto-block-number": "^1.0.12",
    "tripetto-block-password": "^1.0.12",
    "tripetto-block-radiobuttons": "^1.0.12",
    "tripetto-block-text": "^1.0.12",
    "tripetto-block-textarea": "^1.0.11",
    "tripetto-block-url": "^1.0.11",
    "ts-node": "^6.0.5",
    "tslint": "^5.10.0",
    "typescript": "^2.7.2"
  },
  "tripetto": {
    "blocks": [
      "tripetto-block-checkbox",
      "tripetto-block-checkboxes",
      "tripetto-block-dropdown",
      "tripetto-block-email",
      "tripetto-block-number",
      "tripetto-block-password",
      "tripetto-block-radiobuttons",
      "tripetto-block-text",
      "tripetto-block-textarea",
      "tripetto-block-url"
    ],
    "noFurtherLoading": true
  }
}
